{
  "name": "paprikaplay-backend",
  "version": "0.1.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch './**/*.ts' --exec 'ts-node' index.ts",
    "build": "pnpm prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:docker": "docker compose -f ../docker-compose.yml exec -T backend sh -lc 'pnpm prisma generate && pnpm test'",
    "prisma": "prisma"
  },
  "dependencies": {
    "@paprikaplay/games-holdem": "workspace:*",
    "@prisma/client": "^6.8.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.3",
    "nodemon": "^3.0.0",
    "prisma": "^6.8.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  }
}
